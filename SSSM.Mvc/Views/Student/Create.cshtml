@model SSSM.Mvc.Models.StudentModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">

    <h4>新建学生</h4>
    <hr />
    <div class="row">
        <div class="col-md-2 offset-2">
            <div class="card">
                <img href="" />
                <button class="btn btn-primary">上传</button>
            </div>
        </div>
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList(typeof(Gender))"></select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IDNumber" class="control-label"></label>
                    <input asp-for="IDNumber" class="form-control" />
                    <span asp-validation-for="IDNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InnerCode" class="control-label"></label>
                    <input asp-for="InnerCode" class="form-control" />
                    <span asp-validation-for="InnerCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BirthDate" class="control-label"></label>
                    <input asp-for="BirthDate" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EnrollmentDate" class="control-label"></label>
                    <input asp-for="EnrollmentDate" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="PhotoPath" class="form-control" />
                <input type="hidden" asp-for="IsDeleted" class="form-check-input" value="@false" />
                <div class="form-group">
                    <input type="submit" value="保存" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">返回</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</div>