@model IEnumerable<StudentModel>

@{
    ViewData["Title"] = "学生中心";
    var index = 1;
}

<div class="container">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
        <h1 class="h2">学生列表</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a asp-action="Create" class="btn btn-sm btn-outline-primary mr-2">新建</a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Gender)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Age)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.InnerCode)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.SchoolClass)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Major)</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td scope="row">@(index++)</td>
                        <td>@s.Name</td>
                        <td>@s.Gender</td>
                        <td>@s.Age</td>
                        <td>@s.InnerCode</td>
                        <td>@s.SchoolClass</td>
                        <td>@s.Major</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@s.Id" class="text-info">编辑</a> |
                            <a asp-action="Details" asp-route-id="@s.Id" class="text-info">查看</a> |
                            <a asp-action="Delete" asp-route-id="@s.Id" class="text-danger">删除</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>