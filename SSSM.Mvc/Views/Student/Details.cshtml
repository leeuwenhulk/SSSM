@model StudentModel
@{
    ViewData["Title"] = $"学生中心 - 详情（{Model.Name}.{Model.InnerCode})";
}

<div class="row">
    <div class="col-md-4 order-md-2 mb-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">选课情况</span>
            <span class="badge badge-secondary badge-pill">@Model.Courses.Count</span>
        </h4>
        <ul class="list-group mb-3">
            @foreach (var item in Model.Courses)
            {
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">@item.Name</h6>
                        <small class="text-muted">@item?.Major.Name</small>
                    </div>
                    <span class="text-muted">@*成绩*@</span>
                </li>
            }
        </ul>
        <div class="card p-2">
            <a asp-host="Course" asp-action="PersonalSelect" asp-route-id="@Model.Id" class="btn btn-secondary text-light">去选课</a>
        </div>
    </div>
    <div class="col-md-8 order-md-1">
        <form asp-action="Edit" method="post" class="needs-validation" novalidate="">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <img class="card-img-top" alt="..." src="@Model.PhotoPath" asp-append-version="true">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" type="text" readonly class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Gender"></label>
                    <input asp-for="Gender" type="text" readonly class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="IDNumber"></label>
                    <input asp-for="IDNumber" type="text" readonly class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="BirthDate"></label>
                    <input asp-for="BirthDate" type="date" readonly class="form-control" />
                </div>

            </div>
            <hr class="mb-4" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Major"></label>
                    <input asp-for="Major" type="text" readonly class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="SchoolClass"></label>
                    <input asp-for="SchoolClass" type="text" readonly class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="InnerCode"></label>
                    <input asp-for="InnerCode" type="text" readonly class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="EnrollmentDate"></label>
                    <input asp-for="EnrollmentDate" type="date" readonly class="form-control" />
                </div>
            </div>
        </form>
    </div>
</div>

